# =============================================================================
# Portal Backend Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values.
# Never commit .env to version control.
# =============================================================================

# -----------------------------------------------------------------------------
# Core Configuration
# -----------------------------------------------------------------------------
# Environment mode: "local" or "production"
# local: Uses local bot server, production: Uses Pipecat Cloud
ENV=local

# Backend server port
PORT=8000

# Enable debug logging (true/false)
DEBUG=false

# -----------------------------------------------------------------------------
# Database (Required)
# -----------------------------------------------------------------------------
# MongoDB connection string
# Format: mongodb+srv://user:password@cluster.mongodb.net/?retryWrites=true&w=majority
MONGO_URI=<your-mongodb-connection-string>

# MongoDB database name
MONGO_DB_NAME=alfons

# MongoDB connection pool settings (optional)
MONGO_MAX_POOL_SIZE=10
MONGO_SERVER_SELECTION_TIMEOUT_MS=5000

# -----------------------------------------------------------------------------
# Authentication (Required)
# -----------------------------------------------------------------------------
# Secret key for JWT token signing - use a strong random string
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=<your-jwt-secret-key>

# -----------------------------------------------------------------------------
# CORS (Required)
# -----------------------------------------------------------------------------
# Comma-separated list of allowed origins for CORS
# Example: http://localhost:3000,https://yourapp.com
ALLOWED_ORIGINS=http://localhost:3000

# -----------------------------------------------------------------------------
# LLM Services (Required)
# -----------------------------------------------------------------------------
# OpenAI API key - used for main LLM in voice pipeline
# https://platform.openai.com/api-keys
OPENAI_API_KEY=<your-openai-api-key>

# Groq API key - used for fast classifier LLM
# https://console.groq.com/keys
GROQ_API_KEY=<your-groq-api-key>

# Anthropic API key (optional) - used by some client configurations
# https://console.anthropic.com/settings/keys
# ANTHROPIC_API_KEY=<your-anthropic-api-key>

# -----------------------------------------------------------------------------
# Speech-to-Text (Required)
# -----------------------------------------------------------------------------
# Deepgram API key - used for Deepgram Flux STT
# https://console.deepgram.com/
DEEPGRAM_API_KEY=<your-deepgram-api-key>

# -----------------------------------------------------------------------------
# Text-to-Speech (Required - at least one)
# -----------------------------------------------------------------------------
# Cartesia API key - used for Cartesia Sonic TTS
# https://play.cartesia.ai/
CARTESIA_API_KEY=<your-cartesia-api-key>

# ElevenLabs API key (optional) - alternative TTS provider
# https://elevenlabs.io/
# ELEVENLABS_API_KEY=<your-elevenlabs-api-key>

# -----------------------------------------------------------------------------
# Telephony (Required)
# -----------------------------------------------------------------------------
# Daily.co API key - used for voice transport
# https://dashboard.daily.co/developers
DAILY_API_KEY=<your-daily-api-key>

# Daily phone number ID - your registered phone number ID for dial-out
DAILY_PHONE_NUMBER_ID=<your-daily-phone-number-id>

# -----------------------------------------------------------------------------
# Pipecat Cloud (Required for production)
# -----------------------------------------------------------------------------
# Pipecat Cloud API key - required when ENV=production
# https://pipecat.daily.co/
# PIPECAT_API_KEY=<your-pipecat-api-key>

# Pipecat agent name (optional, has default)
# PIPECAT_AGENT_NAME=healthcare-voice-ai

# -----------------------------------------------------------------------------
# Observability (Optional)
# -----------------------------------------------------------------------------
# Enable OpenTelemetry tracing (true/false)
ENABLE_TRACING=false

# Export traces to console (true/false) - useful for debugging
OTEL_CONSOLE_EXPORT=false

# Langfuse integration for LLM observability
# https://langfuse.com/
# LANGFUSE_PUBLIC_KEY=<your-langfuse-public-key>
# LANGFUSE_SECRET_KEY=<your-langfuse-secret-key>
# LANGFUSE_HOST=https://cloud.langfuse.com

# -----------------------------------------------------------------------------
# Timeouts (Optional - have defaults)
# -----------------------------------------------------------------------------
# Bot startup timeout in seconds
BOT_START_TIMEOUT=30

# Daily room creation timeout in seconds
DAILY_ROOM_TIMEOUT=15

# -----------------------------------------------------------------------------
# Local Development (Optional)
# -----------------------------------------------------------------------------
# Local bot server port (when running bot.py locally)
BOT_PORT=7860

# URL of local bot server
LOCAL_BOT_URL=http://localhost:7860
